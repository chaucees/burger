{{!-- Setup the main.handlebars file so it's able to be used by Handlebars. --}}



<div class="container">
    <div class="row">
        {{!-- Header Image --}}
        <div class="col s12">
            <div class="center-align">
                {{!-- Header Image Here --}}
            </div>
        </div>
    </div>

    {{!-- Page Header Title --}}
    <div class="row">
        <div class="col s12">
            <h1 style="text-transform:uppercase; font-weight: bold, font-size: 24pt; color: white;">Burger Stand</h1>
        </div>
    </div>

    <div class="row">
        {{!-- Left Column --}}
        <div class=" col s6">
            <ul class="center-align">
                {{#each burger}}
                    {{unless devoured}}
                        {{>burgers/burgers-block devoured=false}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        {{!-- Right Column --}}
        <div class=" col s6">
            <ul class="center-align">
                {{#each burger}}
                    {{#if devoured}}
                        {{> burgers/burgers-block devoured=true}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    {{!-- Add Burger --}}
    <div class="row">
        <div class=" col s12">
            <div class="input-field col s6">
                <textarea id="texarea" class="materialize-texarea"></textarea>
                <label for="textarea">ADD A BURGER</label>
            </div>
        </div>
    </div>
    
    {{!-- Button --}}
    <div class="row">
    <div class="col s12">
        <div class="center-align">
            <a class="waves-effect waves-light #ffe0b2 orange lighten-4 z-depth-2 btn" id="addButton"><span id="buttonText">Add Burger</span></a>
        </div>
    </div>
</div>

</div>